<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


<!--    card view desing ant it s features kiisa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <!--    waxan soogalny halkan linear layout -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@color/white">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                 android:src="@drawable/wonder"
                android:scaleType="fitXY"
                android:id="@+id/imageViewSplash"
                android:background="@color/white"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Seven Wonders of the \nworld"
                android:layout_marginTop="5dp"
                 android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/textViewSplash"/>

        </LinearLayout>

<!--        desingkan halkan ayuu ku dhamady waxan lagu apply garnya reyclerview-->


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>